generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Fields {
  id   String @id
  name String
}

model Grades {
  id   Int    @id
  name String
}

model RVP {
  code String @id
  name String
}

model Preparations {
  id           String   @id @default(cuid())
  userId       String?  @db.Uuid
  fieldId      String?  @db.Text
  name         String?  @db.Text
  teachingAids String?  @db.Text
  goals        String?  @db.Text
  gradeId      Int?
  times        Json?
  totalTime    Int?
  content      String?  @db.Text
  RVPCodes     String[] // Postgres text[]
  createdat    DateTime @default(now())
  uploaded     Boolean  @default(false)
  reviewing    Boolean  @default(false)
}